        <my:KinectSensorChooser HorizontalAlignment="Left" Margin="656,303,0,0" Name="kinectSensorChooser1" VerticalAlignment="Top" Width="328" Height="203" />
        <my:KinectSkeleton HorizontalAlignment="Left" Margin="126,135,0,0" Name="kinectSkeleton1" VerticalAlignment="Top" />
        <my:KinectColorViewer HorizontalAlignment="Right" Name="kinectColorViewer1" VerticalAlignment="Top" Height="240" Width="320" Kinect="{Binding ElementName=kinectSensorChooser1, Path=Kinect}" Margin="0,6,515,0" />
        <my:KinectSkeletonViewer HorizontalAlignment="Left" Name="kinectSkeletonViewer1" VerticalAlignment="Top" Height="257" Width="282" Kinect="{Binding ElementName=kinectSensorChooser1, Path=Kinect}" />
        <my:KinectDepthViewer HorizontalAlignment="Left" Margin="623,6,0,0" Name="kinectDepthViewer1" VerticalAlignment="Top" Height="240" Width="320" Kinect="{Binding ElementName=kinectSensorChooser1, Path=Kinect}" />
        <TextBox Height="56" HorizontalAlignment="Left" Margin="50,303,0,0" Name="textBox1" VerticalAlignment="Top" Width="490" />
    </Grid>
</Window>
